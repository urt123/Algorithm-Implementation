#include <GL/glut.h>
#include <iostream>

float angX = 20.0f;
float angY = 30.0f;
bool perspectiveMode = true;

void drawWireCube() {
    glColor3f(0.15f, 0.7f, 0.9f);   // just a touch more cyan
    glutWireCube(2.0f);
}

void renderScene() {
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
    glLoadIdentity();
    gluLookAt(4, 4, 6, 0, 0, 0, 0, 1, 0);
    glRotatef(angX, 1, 0, 0);
    glRotatef(angY, 0, 1, 0);
    drawWireCube();
    glutSwapBuffers();
}

void resize(int w, int h) {
    if (!h) h = 1;
    float aspect = static_cast<float>(w) / h;
    glViewport(0, 0, w, h);

    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    if (perspectiveMode)
        gluPerspective(60.0, aspect, 1.0, 100.0);
    else
        glOrtho(-4 * aspect, 4 * aspect, -4, 4, -10, 10);

    glMatrixMode(GL_MODELVIEW);
}

void handleKey(unsigned char key, int, int) {
    if (key == 'p' || key == 'P') perspectiveMode = true;
    if (key == 'o' || key == 'O') perspectiveMode = false;
    if (key == 27) std::exit(0);          // ESC
    glutPostRedisplay();
}

void setup() {
    glEnable(GL_DEPTH_TEST);
    glClearColor(0.95, 0.95, 0.95, 1.0);
}

int main(int argc, char** argv) {
    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGB | GLUT_DEPTH);
    glutInitWindowSize(800, 600);
    glutCreateWindow("3â€‘D Cube Projection (Refactored)");
    setup();
    glutDisplayFunc(renderScene);
    glutReshapeFunc(resize);
    glutKeyboardFunc(handleKey);
    glutMainLoop();
    return 0;
}
