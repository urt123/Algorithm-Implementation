#include <stdio.h>
#include <GL/gl.h>
#include <GL/glut.h>

float x1, y1, r;

void display(void) {
    float x = 0, y = r;
    float d = 3 - (2 * r);

    glBegin(GL_POINTS);
    while (x <= y) {
        glVertex2i(x1 + x, y1 + y);
        glVertex2i(x1 + y, y1 + x);
        glVertex2i(x1 - y, y1 + x);
        glVertex2i(x1 - x, y1 + y);
        glVertex2i(x1 - x, y1 - y);
        glVertex2i(x1 - y, y1 - x);
        glVertex2i(x1 + y, y1 - x);
        glVertex2i(x1 + x, y1 - y);

        if (d < 0) {
            d = d + (4 * x) + 6;
        } else {
            d = d + (4 * (x - y)) + 10;
            y = y - 1;
        }
        x = x + 1;
    }
    glEnd();

    glFlush();
}

void init(void) {
    glClear(GL_COLOR_BUFFER_BIT);
    glClearColor(0, 0, 0, 0);
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    gluOrtho2D(-100, 100, -100, 100);
}

int main(int argc, char** argv) {
    printf("Enter Center of Circle (x1 y1): ");
    scanf("%f %f", &x1, &y1);
    printf("Enter Radius of Circle: ");
    scanf("%f", &r);

    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB);
    glutInitWindowSize(500, 500);
    glutInitWindowPosition(100, 100);
    glutCreateWindow("Bresenham's Circle Drawing Algorithm");

    init();
    glutDisplayFunc(display);
    glutMainLoop();
    return 0;
}
//input: enter center of circle and radius

